<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.moonwinston.motivationaltodolist.ui.weekly.WeeklyFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_fragment_weekly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- calendar -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_weekly_calendar"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toTopOf="@id/recyclerview_weekly_todo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:spanCount="7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@id/recyclerview_weekly_todo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_weekly_calendar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_weekly_todo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerview_weekly_calendar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>