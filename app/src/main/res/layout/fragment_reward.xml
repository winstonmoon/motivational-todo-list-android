<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="fragment" type="com.moonwinston.motivationaltodolist.ui.reward.RewardFragment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.moonwinston.motivationaltodolist.ui.reward.RewardFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reward_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constrainedHeight="true"
            app:spanCount="7"
            tools:listitem="@layout/item_reward" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>