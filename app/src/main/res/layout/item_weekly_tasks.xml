<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkbox_daily_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_daily_tasks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_daily_tasks"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:autoSizeTextType="uniform"
            android:text="test task"
            app:layout_constraintBottom_toTopOf="@id/time_daily_tasks"
            app:layout_constraintEnd_toStartOf="@id/imagebutton_weekly_tasks"
            app:layout_constraintStart_toEndOf="@id/checkbox_daily_tasks"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/time_daily_tasks"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:autoSizeTextType="uniform"
            android:text="12:00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imagebutton_weekly_tasks"
            app:layout_constraintStart_toEndOf="@id/checkbox_daily_tasks"
            app:layout_constraintTop_toBottomOf="@id/text_daily_tasks" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imagebutton_weekly_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_baseline_edit_24"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_daily_tasks"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>