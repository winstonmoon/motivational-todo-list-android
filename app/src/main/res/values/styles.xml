<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCalendar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorControlActivated">@color/blue_icon</item>
        <item name="android:textColorSecondary">@color/sub_text</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/sub_background</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue_icon</item>
        <item name="colorControlNormal">@color/blue_icon</item>
    </style>

</resources>